{
  "name": "Twittermate",
  "version": "1.0",
  "description": "Twitter helper",
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/twittermate16.png",
      "32": "images/twittermate32.png",
      "48": "images/twittermate48.png",
      "128": "images/twittermate128.png"
    }
  },
  "icons": {
    "16": "images/twittermate16.png",
    "32": "images/twittermate32.png",
    "48": "images/twittermate48.png",
    "128": "images/twittermate128.png"
  },
  "manifest_version": 2
}